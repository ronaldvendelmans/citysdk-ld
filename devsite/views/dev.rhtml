<!doctype html>
<html lang="en">
  <head>
    <title><%= title %> | CitySDK Linked Data API</title>
    <meta charset="utf-8">
    <meta name="viewport"content="width=device-width,initial-scale=1">
    <link href="img/favicon.ico" rel="shortcut icon" type=image/x-icon>
    <link rel="stylesheet" href="style.css">
    <script src="jquery-1.9.1.min.js"></script>
    <script src="highlight.min.js"></script>
    <!--[if lt IE 9]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->    
    <% if map %>
      <link rel="stylesheet" href="leaflet/leaflet.css" />
      <link rel="stylesheet" href="map.css">
      <script src="spin.min.js"></script>
      <script src="leaflet/leaflet.js"></script>
      <script src="jquery-migrate-1.2.1.min.js"></script>      
    <% end %>
  	<script type="text/javascript">
      $(document).ready(function () {
        hljs.initHighlightingOnLoad();
        $("a.ep_cms_url").attr("href", "<%= config[:ep_cms_url] %>");
  		});
      // Dynamic endpoint URL, used on data page
      var epApiUrl = "<%= config[:ep_api_url] %>";
  	</script>
  </head>
  <body>	
    <header>
      <div class="container">
        <h1>CitySDK Linked Data API</h1>
        <div class="logo">
          <img src="img/citysdk.png" />
        </div>
        <nav>
          <ul>
            <li><a href="/">Home</a></li>
            <li>
              <ul>
                <li><a href="about">About</a></li>
                <li><a href="faq">FAQ</a></li>
              </ul>
            </li>
            <li><a href="apps">Apps</a></li>
            <li><a href="data">Data</a></li>
            <li><a href="api">API</a></li>
            <li>
              <ul>                
                <li><a href="api-read">Read</a></li>
                <li><a href="api-write">Write</a></li>
                <li><a href="api-match">Match</a></li>
              </ul>
            </li>
            <li><a href="map">Map viewer</a></li>
          </ul>
        </nav>
      </div>
  	</header>
    <% if map %>
      <%= map %>
    <% else %>
      <div id="maincontent" class="full-width-content">      
        <div class="container">
          <div class="info">
            <article class="hero clearfix">
              <% if info %>
                <div class="col_66">
                  <%= text %>
                </div>
                <div class="col_33">
                  <%= info %>
                </div>
              <% else %>
                <div class="col_100">
                  <%= text %>
                </div>
              <% end %>
            </article>
          </div>
        </div>
      </div>
      <footer>
        <div class="container">
          <a href='http://waag.org'>Waag Society</a> &ndash; 2013
          <div class="logos">
            <a href="http://www.waag.org/"><img src="/img/waag-small.png" /></a>
            <a href="http://www.citysdk.eu/"><img src="/img/citysdk-small.png" /></a>
            <a href="http://ec.europa.eu/information_society/activities/ict_psp/about/index_en.htm"><img src="/img/ict-psp.png" /></a>
            <a href="http://europa.eu/"><img src="/img/europa.png" /></a>
            <a href="http://creativecommons.nl/wie-zijn-we/"><img src="/img/cc.png" /></a>
          </div>
        </div>          
      </footer>
    <% end %>
  </body>
</html>